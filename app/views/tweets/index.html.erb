<%= render "shared/header" %>

<div class="main">
  <div class="wrapper">
  </div>

  <div class="center">
    <div class="top-image">
    </div>
    <div class="title">
      <%= link_to new_tweet_path, class: "post-link" do %>  
      <% end %>
    </div>
    
    <div class="tweet-contents">
      <div class="top-title">
        新着投稿
      </div>
      <div class="new-info" >
        <% @tweet2.each do |t| %>
            <%= link_to tweet_path(t.id), class: "link" do %> 
              <div class="new-tweet" >
                <div class="t-title" >
                  <%= t.title %>
                </div>
                <div class="t-updated_at" >
                  <%= t.updated_at.strftime("%Y-%m-%d %H:%M") %>
                </div>
              </div>
            <% end %>
        <% end %>
      </div>
    </div>

  </div>

  <div class="container">
  </div>
</div>

<%= render "shared/footer"%>